{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:prettier/recommended",
    "plugin:react/jsx-runtime"
  ],
  "rules": {
    "react/jsx-filename-extension": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "parser": "flow"
      }
    ]
  },
  "react/jsx-no-bind": [
    "error",
    {
      "allowArrowFunctions": true,
      "allowFunctions": true,
      "allowBind": true
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  }
}
